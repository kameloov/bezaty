DROP TABLE IF EXISTS `category`;
CREATE TABLE IF NOT EXISTS `category` (
	`id`	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	`name`	TEXT,
	`details`	TEXT,
	`icon`	INTEGER,
	`balance`	REAL NOT NULL,
	`is_expense`	INTEGER DEFAULT 1
);
